@model ProfileModel
@{
    ViewBag.Title = "My Profile";
    ViewBag.AtiveTab = NavigationTab.None;
    ViewBag.DarkOverlayClass = "account-manager-content";
    ViewBag.IsLoggedIn = true;
}

<div class="account-manager-page all-page">
    @{ Html.RenderPartial("_TopIdentifyManagerPanel", new TopIdentityPanelModel(applyXsXmClasses: true, navigationTab: "MyProfile")); }
    @{ Html.RenderPartial("_MyProfileNavigation", "Personal Info"); }

    <div class="visible-xs visible-sm">
        <div class="top-title-button active ">
            <h1 class="active">Personal Info</h1>
        </div>
    </div>

    <!-- Personal Info Details Form -->
    <div class="personal-info-form">
        <h3>Personal Info Details</h3>
        <div class="title-border"></div>
        <div class="info-form">
            <div class="row p-0">
                <div class="col-md-11 col-sm-11 col-xs-11">
                    <div class="row px-sm-0 px-md-0 content">
                        <div class="col-md-4 py-sm-1 px-sm-0 px-md-0">
                            Address
                            <span class="pull-right">:</span>
                        </div>
                        <div class="col-md-8 py-sm-1 py-md-1 pl-sm-0 pl-md-0 pr-sm-3 pr-md-3 bold-text">
                            @Model.Address
                        </div>
                    </div>
                    <div class="row px-sm-0 px-md-0 content pt-sm-0 pt-md-0">
                        <div class="col-md-4 py-sm-1 px-sm-0 px-md-0">
                            Home Phone
                            <span class="pull-right">:</span>
                        </div>
                        <div class="col-md-8 py-sm-1 py-md-1 pl-sm-0 pl-md-0 pr-sm-3 pr-md-3 bold-text">
                            @Model.HomePhone
                        </div>
                    </div>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1 pl-sm-0 pl-md-0">
                    <div class="pt-3  mt-sm-3 mt-md-3">
                        <a href="@Url.Action("EditPersonalInfo", "MyProfile")">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            <p class=" mini-text">Edit</p>
                        </a>
                    </div>
                </div>
            </div>
            <div class="bottom-border inner"></div>
            <div class="row p-0">
                <div class="col-md-11 col-sm-11 col-xs-11">
                    <div class="row px-sm-0 px-md-0 content">
                        <div class="col-md-4 py-sm-1 px-sm-0 px-md-0">
                            Mobile Phone
                            <span class="pull-right">:</span>
                            <p class="gray-mini-text">(Also used as "Account Recovery Mobile")</p>
                        </div>
                        <div class="col-md-8 py-sm-1 py-md-1 pl-sm-0 pl-md-0 pr-sm-3 pr-md-3 bold-text">
                            @Model.MobilePhone
                        </div>
                    </div>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1 pl-sm-0 pl-md-0">
                    <div class="pt-3 mt-sm-3 mt-md-3">
                        <a href="@Url.Action("ChangeMobilePhone", "MyProfile")">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            <p class=" mini-text">Edit</p>
                        </a>
                    </div>
                </div>
            </div>
            <div class="bottom-border inner"></div>
            <div class="row p-0">
                <div class="col-md-11 col-sm-11 col-xs-11">
                    <div class="row px-sm-0 px-md-0 content">
                        <div class="col-md-4 py-sm-1 px-sm-0 px-md-0">
                            Email Address
                            <span class="pull-right">:</span>
                            <p class="gray-mini-text">(Also used as "Account Recovery Email Address")</p>
                        </div>
                        <div class="col-md-8 py-sm-1 py-md-1 pl-sm-0 pl-md-0 pr-sm-3 pr-md-3 bold-text">
                            @Model.EmailAddress
                        </div>
                    </div>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1 pl-sm-0 pl-md-0">
                    <div class="pt-3  mt-sm-3 mt-md-3">
                        <a href="@Url.Action("ChangeEmailAddress", "MyProfile")">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            <p class=" mini-text">Edit</p>
                        </a>
                    </div>
                </div>
            </div>
            <div class="bottom-border inner"></div>
        </div>

        <div class="phone-number p-sm-3 p-md-3">
            <h4>Employee Phone Number</h4>
            <div class="bottom-table hidden-xs hidden-sm">
                <div class="main-content">
                    <div class="first-table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="column01">
                                        <span class="title">Employee Name</span>
                                    </th>
                                    <th class="column02">
                                        <span class="title">Account Number</span>
                                    </th>
                                    <th class="column03">
                                        <span class="title">Phone Number</span>
                                    </th>
                                    <th class="column04">

                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- end /first-table -->
                    <div class="second-table hidden-xs hidden-sm">
                        <table>
                            <tbody>
                                @foreach (var item in Model.EmployeePhones)
                                {
                                    <tr>
                                        <td class="column01">
                                            <span class="title bold">@item.EmployeeName</span>
                                        </td>
                                        <td class="column02">
                                            <span class="title ">@item.AccountNumber</span>
                                        </td>
                                        <td class="column03">
                                            <span class="title">@item.PhoneNumber</span>
                                        </td>
                                        <td class="column04">
                                            <a href="@Url.Action("EditEmployeePhone", "MyProfile")">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                                <p class=" mini-text">Edit</p>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- end /second-table -->
                </div>
                <!-- end /main-content -->
            </div>

            @foreach (var item in Model.EmployeePhones)
            {
                <div class="row mobi-tbl visible-xs visible-sm">
                    <div class="col-lg-11 col-xl-11 col-md-11 col-sm-11 col-xs-11 p-sm-3 p-md-3">
                        <div class="row">
                            <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-xs-6 p-md-0 p-sm-0">
                                <span class="title">Employee Name</span>
                                <span class="pull-right pr-sm-3 pr-md-3">:</span>
                            </div>
                            <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-xs-6 p-md-0 p-sm-0">
                                <span class="value">@item.EmployeeName</span>
                            </div>
                        </div>
                        <div class="row my-sm-2 my-md-2">
                            <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-xs-6 p-md-0 p-sm-0">
                                <span class="title">Account Number</span>
                                <span class="pull-right pr-sm-3 pr-md-3">:</span>
                            </div>
                            <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-xs-6 p-md-0 p-sm-0">
                                <span class="value ">@item.AccountNumber</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-xs-6 p-md-0 p-sm-0">
                                <span class="title">Phone Number</span>
                                <span class="pull-right pr-sm-3 pr-md-3">:</span>
                            </div>
                            <div class="col-lg-6 col-xl-6 col-md-6 col-sm-6 col-xs-6 p-md-0 p-sm-0">
                                <span class="value">@item.PhoneNumber</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1 col-xl-1 col-md-1 col-sm-1 col-xs-1 p-sm-0 p-md-0 text-center">
                        <div class="edit-button">
                            <a href="@Url.Action("EditEmployeePhone", "MyProfile")">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                <p class=" mini-text">Edit</p>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
